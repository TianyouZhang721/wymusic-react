color = #d43c33
html, body, div, p, ul, li, h1, h2, h3, header, main, footer, nav, section
    margin 0
    padding 0
    box-sizing: border-box
body 
    -webkit-tap-highlight-color: rgba(0,0,0,0)
a  
    text-decoration: none
    color #000000
li  
    list-style none
img 
    display block

html,body, #root 
    width 100%
    height 100%


// 首页的样式
.home-container 
    display flex
    flex-direction: column
    width 100%
    height 100%
    header 
        width 100%
        height 1.28rem
        .home-header 
            width 100%
            height .8rem
            background-color color
            display flex
            justify-content: space-between
            align-items: center
            padding 0 .2rem
            color #fff
            .right
                width: 1rem
                height .36rem
                border-radius: .18rem
                background-color: #fff
                color color
                line-height: .36rem
                text-align center
        nav 
            width 100%
            height .44rem
            display: flex
            border-bottom .01rem solid #ccc
            a   
                flex 1
                text-align center
                line-height: .44rem
                &.active 
                    color color
    main 
        flex 1
        overflow: auto
        padding-top .2rem

.recommend 
    width 100%
    .recommend-music 
        width 100%
        >p
            border-left .02rem solid color
            padding-left .1rem
            margin-bottom: .1rem
        ul 
            display flex
            flex-wrap wrap
            justify-content: space-between
            li  
                width 1.2rem
                margin-bottom: .1rem
                .img-box 
                    width 1.2rem
                    height 1.2rem
                    img 
                        width 100%
                        height 100%
                p
                    font-size .12rem
                    padding 0 .04rem
                    display: -webkit-box; /* 弹性盒模型*/
                    -webkit-box-orient: vertical; /* 文字垂直排列 */
                    -webkit-line-clamp:2; /*文字显示的行数*/
                    overflow: hidden; /*超出部分溢出隐藏*/
    .new-music 
        width 100%
        >p
            border-left .02rem solid color
            padding-left .1rem
            margin-bottom: .1rem
        li 
            display flex
            justify-content: space-between
            padding .08rem .15rem
            align-items: center
            .singerName 
                font-size .12rem
                color #999
            i
                font-size .3rem
                color #999
.play-box 
    width 100%
    height 100%
    overflow hidden
    background-color: #000;
    position: realative
    .bg-box 
        width 100%
        height 100%
        transform: scale(1.5)
        opacity: .5
        
    .circle-box 
        width 2.96rem
        height 2.96rem
        position absolute
        left .39rem
        top .7rem
        i
            position: absolute
            left 50%
            top 50%
            transform: translate(-50%, -50%)
            font-size .5rem
            color #fff
            &.opa 
                opacity 0
        .circle 
            width 100%
            height 100%
            background: url(//s3.music.126.net/mobile-new/img/disc-ip6.png?69796123ad7cfe95781ea38aac8f2d48=) no-repeat center center
            background-size: contain
            display flex
            justify-content: center
            align-items: center
            .img-box
                width 1.84rem
                height 1.84rem
                border-radius: 50%
                overflow hidden
                animation: rotate 20s linear infinite
                &.stop 
                    animation-play-state: paused
                img 
                    width 100%
                    height 100%
    .lyric-box 
        position absolute
        top 4rem
        width 100%
        padding 0 .8rem
        text-align: center
        color #fff
        p
            font-size: .2rem
            span 
                font-size: .14rem
                color #999
                margin-left .1rem
        .box 
            width 100%
            height: .5rem
            overflow: hidden
            margin-top: .2rem
            ul 
                transition all 1s
                li  
                    padding .02rem 0
                    opacity: .5
                    &.active 
                        opacity: 1
    .progress-box 
        position absolute
        top 5.6rem
        display: flex 
        color #fff
        width 100%
        align-items: center;
        span 
            width .6rem
            text-align: center
        .long-box 
            flex 1
            background-color: #999;
            height .06rem;
            position relative
            .truth-progress
                width 0rem;
                height 100%;
                background-color: #fff
            .circle 
                width: 0.12rem
                height .12rem
                border-radius: 50%
                background-color: #fff;
                position: absolute;
                left: 0
                top -.03rem

.hot 
    width 100%
    height 100%
    padding 0 .15rem
    .musiclist 
        height 100%
        overflow: hidden
    li 
        display flex
        padding .08rem 0
        align-items: center
        span 
            width .3rem
            flex-shrink: 0
        div 
            flex 1
            flex-shrink: 0
            font-size .14rem
            overflow: hidden
            .songName 
                width 100%
                text-overflow: ellipsis
                overflow: hidden
                white-space: nowrap
            .singerName 
                font-size .12rem
                color #999
        i
            width .3rem
            font-size: .3rem
            flex-shrink: 0
@keyframes rotate {
    0% {
        transform: rotate(0deg)
    }
    100% {
        transform: rotate(360deg)
    }
}
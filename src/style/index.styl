color = #d43c33
html, body, div, p, ul, li, h1, h2, h3, header, main, footer, nav, section
    margin 0
    padding 0
    box-sizing: border-box
a  
    text-decoration: none
    color #000000
li  
    list-style none
img 
    display block

html,body, #root 
    width 100%
    height 100%


// 首页的样式
.home-container 
    display flex
    flex-direction: column
    width 100%
    height 100%
    header 
        width 100%
        height 1.32rem
        .home-header 
            width 100%
            height .88rem
            background-color color
            display flex
            justify-content: space-between
            align-items: center
            padding 0 .2rem
            color #fff
            .right
                width: 1rem
                height .36rem
                border-radius: .18rem
                background-color: #fff
                color color
                line-height: .36rem
                text-align center
        nav 
            width 100%
            height .44rem
            display: flex
            border-bottom .01rem solid #ccc
            a   
                flex 1
                text-align center
                line-height: .44rem
                &.active 
                    color color
    main 
        flex 1
        overflow: auto
        padding-top .2rem

.recommend 
    width 100%
    .recommend-music 
        width 100%
        >p
            border-left .02rem solid color
            padding-left .1rem
            margin-bottom: .1rem
        ul 
            display flex
            flex-wrap wrap
            justify-content: space-between
            li  
                width 1.2rem
                margin-bottom: .1rem
                .img-box 
                    width 1.2rem
                    height 1.2rem
                    img 
                        width 100%
                        height 100%
                p
                    font-size .14rem
                    display: -webkit-box; /* 弹性盒模型*/
                    -webkit-box-orient: vertical; /* 文字垂直排列 */
                    -webkit-line-clamp:2; /*文字显示的行数*/
                    overflow: hidden; /*超出部分溢出隐藏*/
